@if (Tab == AssetTab.Fields)
{
    @FieldsTemplate
}
else if (Tab == AssetTab.Notes)
{
    @NotesTemplate
}

@code {
    
    [Parameter]
    public AssetTab Tab { get; set; }

    [Parameter]
    public RenderFragment FieldsTemplate { get; set; }
    
    [Parameter]
    public RenderFragment NotesTemplate { get; set; }
}