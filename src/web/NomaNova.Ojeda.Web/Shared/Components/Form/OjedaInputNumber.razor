@* Adjusts the default InputNumber behaviour as to trigger validation on input rather than on change *@
@typeparam TNumber
@inherits InputNumber<TNumber>

<input 
   type="number"
   step="any"
   @attributes="AdditionalAttributes" 
   class="@CssClass" 
   value="@CurrentValue" 
   @oninput="EventCallback.Factory.CreateBinder<string>(
        this, value => CurrentValueAsString = value, CurrentValueAsString)" />
